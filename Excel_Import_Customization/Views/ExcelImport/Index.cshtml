        <label id="lblExcelUpload" for="default-input" class="form-control-label">Upload Excel</label>
        <div class="form-group col-sm-3" id="divExcelUpload">
            <input type="file" id="file" name="file" class="form-control">
        </div>
       



            <div id="divbtnSave" class="col-sm-2">
                <button id="btnSave" type="submit" class="btn btn-primary">Save</button>
            </div>

    </div>


</form>

